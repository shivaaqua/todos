<div class='form-container'>
  <%= form_for(@task) do |f| -%>
    <table cellpadding='0' cellspacing='0'>
      <tr>
        <td colspan='3' class="title"><%= ['edit','update'].include?(params[:action]) ? 'Edit Task' : 'Add new task' %></td>
      </tr>  
      <tr>
        <td valign='top'><%= f.text_field :title %></td>
        <td><%= f.submit 'Go', {:class => 'button'} -%></td>
        <td><%= f.submit 'Cancel', {:type => :button, :class => 'button'} -%></td>
      </tr>  
    </table>
  <% end %>
</div>
