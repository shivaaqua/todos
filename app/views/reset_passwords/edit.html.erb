<h1 class='form-title'> Reset my password </h1>

 <%= simple_form_for @user,  :url => reset_password_path(params[:id]) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password, :input_html => {:autocomplete => "off"} %>
    <%= f.input :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,'Change Password', {:class => 'register-btn'} %>
  </div>
<% end %>

